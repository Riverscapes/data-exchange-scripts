// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Data Excahnge Scripts",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/va-h/devcontainers-features/uv:1": {}
	},
  "containerEnv": {
    // Tell The API to use a different port inside codespaces so that it doesn't conflict with the user's root machine use
    "RSAPI_ALTPORT": "TRUE"
  },

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
    // Note that we are usign the alternate port for authentication (we use 4721 outside the codespace)
    4723
  ],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sh .devcontainer/bootstrap.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.codespaces",
				"GitHub.copilot-chat",
				"GitHub.copilot",
				"GraphQL.vscode-graphql",
				"mhutchie.git-graph",
				"ms-python.debugpy",
				"ms-python.isort",
				"ms-python.pylint",
				"ms-python.python",
				"ms-vsliveshare.vsliveshare",
				"njpwerner.autodocstring",
				"redhat.vscode-xml"
			]
		}
	}
}
