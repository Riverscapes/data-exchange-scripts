{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Riverscapes Layer Collection Manifest",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "authority_name": {
            "type": "string",
            "description": "Issuing Python package name"
        },
        "authority_version": {
            "type": "string",
            "description": "Package semver or build tag"
        },
        "layers": {
            "type": "object",
            "description": "Map of layer identifier -> metadata entry",
            "minProperties": 1,
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "description": "Human-readable summary of the layer."
                    },
                    "source_url": {
                        "type": "string",
                        "format": "uri",
                        "description": "External documentation or provenance URL (ie upstream - this is not for links to documentation generated from this data)."
                    },
                    "data_product_version": {
                        "type": "string",
                        "description": "Data vintage/year or range."
                    },
                    "layer_type": {
                        "type": "string",
                        "enum": [
                            "table",
                            "view",
                            "raster",
                            "vector"
                        ],
                        "description": "Layer category (optional)."
                    },
                    "def_path": {
                        "type": "string",
                        "description": "Relative path to the layer definition JSON."
                    }
                },
                "required": [
                    "description"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "authority_name",
        "authority_version",
        "layers"
    ],
    "additionalProperties": false
}